{
  "name": "shext",
  "version": "0.1.2",
  "author": "plvo <plvoo@proton.me>",
  "license": "MIT",
  "description": "âš¡ A collection of utility functions and components to speed up Next.js development",
  "homepage": "https://github.com/plvo/shext",
  "bugs": {
    "url": "https://github.com/plvo/shext/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shext/shext"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "typescript",
    "nextjs",
    "react",
    "web"
  ],
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write .",
    "clean": "rimraf dist/",
    "build": "pnpm run clean && tsc",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "ci": "pnpm run format && pnpm run build && pnpm run check-exports && pnpm run test",
    "prepublishOnly": "pnpm run ci",
    "release": "release-it",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "auto-changelog": "^2.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "release-it": "^18.1.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "release-it": {
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commit": true,
      "commitMessage": "chore: release v${version}",
      "tag": true,
      "tagName": "v${version}",
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ]
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [],
      "before:bump": "npx auto-changelog --stdout --commit-limit false --unreleased --template keepachangelog > CHANGELOG.md",
      "after:release": "echo Successfully released ${name} v${version}"
    }
  }
}
